---
import Layout from '../layouts/Layout.astro';
import highfive from '../assets/highfive.webp'; // Remplace le chemin si besoin
---

<Layout>
  <section class="bg-[#f7f2fb] min-h-screen py-16 px-4 flex justify-center items-center">
    <div class="w-full max-w-xl text-center">
      <h1 class="text-3xl md:text-4xl font-extrabold text-[var(--color-rose)] mb-6" style="font-family: var(--font-Menu);">
        Contactez-nous
      </h1>

      <img src={highfive.src} alt="Illustration High five" class="mx-auto w-32 md:w-48 mb-6" />

      <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-[var(--color-rose)] to-[var(--color-orange)] mb-8" style="font-family: var(--font-Menu);">
        Envoyez nous un message
      </h2>

      <form class="space-y-6 text-left">
        <div>
          <label class="block font-bold text-[var(--color-violet)] mb-1" style="font-family: var(--font-Menu);">Nom/Pr√©nom</label>
          <input type="text" placeholder="Entrez votre Nom" class="w-full px-4 py-3 border-2 border-[var(--color-rose)] rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--color-orange)] text-[var(--color-violet)] font-semibold" />
        </div>
        <div>
          <label class="block font-bold text-[var(--color-violet)] mb-1" style="font-family: var(--font-Menu);">Email</label>
          <input type="email" placeholder="Entrez votre adresse Email" class="w-full px-4 py-3 border-2 border-[var(--color-rose)] rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--color-orange)] text-[var(--color-violet)] font-semibold" />
        </div>
        <div>
          <label class="block font-bold text-[var(--color-violet)] mb-1" style="font-family: var(--font-Menu);">Message</label>
          <textarea rows="4" placeholder="Entrez votre message" class="w-full px-4 py-3 border-2 border-[var(--color-rose)] rounded-xl focus:outline-none focus:ring-2 focus:ring-[var(--color-orange)] text-[var(--color-violet)] font-semibold resize-none"></textarea>
        </div>
        <button type="submit" class="w-full py-3 rounded-full font-bold text-white text-lg bg-gradient-to-r from-[var(--color-rose)] via-pink-500 to-[var(--color-orange)] hover:opacity-90 transition" style="font-family: var(--font-Menu);">
          Envoyer mon message
        </button>
      </form>
    </div>
  </section>
</Layout>

