---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Ma Page de Contact">
  <section class="bg-gray-100 py-16">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Contactez-Nous</h1>
      <p class="text-lg text-gray-700 mb-8">
        Vous avez une question ou une suggestion ? N'hésitez pas à nous contacter !
      </p>
      <a href="/contact" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-full">
        Contact
      </a>
    </div>
  </section>
</Layout>