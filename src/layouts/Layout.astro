---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

import PocketBase from 'pocketbase'

const pb = new PocketBase("https://pb-faclink.alice-frelin.fr:443")

// Récupérer tous les cookies (ex: pb_auth)
const rawCookies = Object.values(Astro.cookies).map(c => `${c.name}=${c.value}`).join(';')
pb.authStore.loadFromCookie(rawCookies)
const { isLoggedIn, user } = Astro.props;
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Fac'Link</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
  </head>
  <body>
    <!-- On passe les props ici -->
    <Header isLoggedIn={isLoggedIn} user={user} />
    <slot />
    <Footer />
  </body>
</html>
